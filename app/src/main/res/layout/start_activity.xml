<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start with fragment viewpager"
        />

    <Button
        android:id="@+id/ondrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start with recycleview HidingScrollToolbar"
        />

    <Button
        android:id="@+id/ondrags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start with recycleview ondrag"
        />

    <Button
        android:id="@+id/createqr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start with create qr code"
        />

    <Button
        android:id="@+id/takepic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start with cut pic"
        />

    <Button
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start with up activity with dilog"
        />

    <Button
        android:id="@+id/onTouch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch"
        />


</LinearLayout>